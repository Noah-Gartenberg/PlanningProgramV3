            </ToolBar>

            <ToolBar Background="#FFE0E5E2" Band="0" BandIndex ="1" x:Name="Edit">
                <Button Content="Cut" Margin="1,0,1,0"/>
                <Button Content="Copy" Margin="1,0,1,0"/>

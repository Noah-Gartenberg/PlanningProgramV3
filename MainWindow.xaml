                <Button Content="Redo" Margin="1,0,1,0"/>
                <Separator/>
                <Button Content="Show Clipboard History" Margin="1,0,1,0"/>
            </ToolBar>

            <ToolBar Background="#FFE0E5E2" Band="0" BandIndex ="2" x:Name="Add" >
                <Button Content="Add Item" Margin="1,0,1,0"/>
            </ToolBar>
        </ToolBarTray>


        <StackPanel x:Name="TabsAndPages" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Margin="10" Orientation="Vertical" Background="#FFE0E5E2">
            <Border x:Name="Tabs" Background="#FFE0E5E2">
                <TabControl HorizontalAlignment="Stretch" Background="#FFE0E5E2">
                    <TabItem Header="Monday"/>
                    <TabItem Header="Tuesday"/>
                    <TabItem Header="Personal Projects"/>
                    <TabItem Header="Bounce Up"/>
                </TabControl>
            </Border>


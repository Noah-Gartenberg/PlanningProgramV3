<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:PlanningProgramV3.Views.PlanControls"
                    xmlns:TemplateSelector="clr-namespace:PlanningProgramV3.ViewModels"
                    xmlns:ViewModels="clr-namespace:PlanningProgramV3.ViewModels.ItemViewModels">

    <!--<DataTemplate x:Key="TaskTemplate">
        <Controls:TaskUserControl/>
    </DataTemplate>-->
    <HierarchicalDataTemplate x:Key="TaskTemplate" DataType="{x:Type ViewModels:TaskViewModel}"
                              ItemsSource="{Binding Path=SubItems}">
        <Controls:TaskUserControl/>
    </HierarchicalDataTemplate>
    <DataTemplate x:Key="TextTemplate" DataType="{x:Type ViewModels:TextViewModel}">
        <Controls:TextUserControl/>
    </DataTemplate>
    <DataTemplate x:Key="DateTemplate" DataType="{x:Type ViewModels:DateDurationViewModel}">
        <Controls:DateDurationUserControl/>
    </DataTemplate>


    <TemplateSelector:SubItemTemplateSelector x:Key="ItemTemplateSelector"
                                     Task="{StaticResource TaskTemplate}"
                                     Text="{StaticResource TextTemplate}"
                                     Date="{StaticResource DateTemplate}"/>

</ResourceDictionary>
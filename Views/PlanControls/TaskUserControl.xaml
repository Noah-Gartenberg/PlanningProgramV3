<UserControl x:Class="PlanningProgramV3.Views.PlanControls.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanningProgramV3.Views.PlanControls"
             xmlns:data="clr-namespace:PlanningProgramV3.ViewModels.ItemViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <data:TaskViewModel/>
    </UserControl.DataContext>
    <!--<UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/../CustomControls.xaml"/>
                <ResourceDictionary Source="/../ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>


    </UserControl.Resources>-->
    <Expander Style="{DynamicResource TaskExpander}" ExpandDirection="Down" HorizontalAlignment="Left" VerticalAlignment="Center" >

        <Expander.Header>
            <Border Width="Auto" Height="Auto">
                <Border.ContextMenu>
                    <ContextMenu x:Name="cm_AddSubItem">
                        <MenuItem Header="Cut"/>
                        <MenuItem Header="Copy"/>
                        <MenuItem Header="Paste"/>
                        <MenuItem Header="Add Task" Command="{Binding AddSubItemCommand}" CommandParameter="Task"/>
                        <MenuItem Header="Add Text" Command="{Binding AddSubItemCommand}" CommandParameter="Text"/>
                        <MenuItem Header="Add Date" Command="{Binding AddSubItemCommand}" CommandParameter="Date"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0">
                    <CheckBox IsChecked="{Binding IsComplete, Mode=TwoWay}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" MinWidth="50" MaxLines="1" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Expander.Header>
        <Expander.Content>
            <ListView ItemsSource="{Binding SubItems, Mode=TwoWay}" Margin="10,0,0,0" ItemTemplateSelector="{StaticResource ItemTemplateSelector}">
            </ListView>
        </Expander.Content>
    </Expander>

</UserControl>

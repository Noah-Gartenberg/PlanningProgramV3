<UserControl x:Class="PlanningProgramV3.Views.PlanControls.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanningProgramV3"
             xmlns:data="clr-namespace:PlanningProgramV3.ViewModels.ItemViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--Why not just use a tree view? Because I want this to look a bit more like building blocks than a tree view allows for-->
    <!--Issue: data binding. The Task View model when a child of another task (or all subsequent view models) are not bound to the right data type - because the type of object in 
        the parent is the PlannerItemViewModel - not a task view model (or the correct view model type and so nothing is bound)?-->
    <Expander Style="{DynamicResource TaskExpander}" ExpandDirection="Down" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" >
        <Expander.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform X="0.5" Y="0.5"/>
            </TransformGroup>
        </Expander.RenderTransform>
        <Expander.Header>
            <!--Solving problem where can't find main window, by binding the tag element in the border to the main window itself - may instead bind to command, haven't decided yet but yeah
                apparently this is what other people have done if needed to bind to data context of an element: https://stackoverflow.com/a/3668699 -->
            <Border Width="Auto" Height="Auto" Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:MainWindow}}">
                <Border.ContextMenu>
                    <ContextMenu x:Name="cm_AlterSubItem">
                        <MenuItem Header="Cut"/>
                        <MenuItem Header="Copy"/>
                        <MenuItem Header="Paste"/>
                        <MenuItem Header="Add Task" Command="{Binding Path=AddSubItemCommand}" CommandParameter="Task"/>
                        <MenuItem Header="Add Text" Command="{Binding Path=AddSubItemCommand}" CommandParameter="Text"/>
                        <MenuItem Header="Add Date" Command="{Binding Path=AddSubItemCommand}" CommandParameter="Date"/>
                        <!--I keep forgetting context menus are not in the hierarchy of the item they're parented to... or maybe they are? I don't even know....-->
                        <!--<MenuItem Header="Delete Item" Command="{Binding Path=RemoveSubItemCommand}" CommandParameter="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}"/>-->
                        <MenuItem Header="Delete Item" Command="{Binding Path=RemoveSelfCommand}" CommandParameter="{Binding PlacementTarget.Tag.DataContext.DeleteItemCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ContextMenu}}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0">
                    <CheckBox IsChecked="{Binding Path=IsComplete, Mode=TwoWay}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Path=Name, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" MinWidth="50" MaxLines="1" MaxLength="100" VerticalAlignment="Center" TextWrapping="NoWrap"/>
                </StackPanel>
            </Border>
        </Expander.Header>
        <Expander.Content>
            <ListView Name="SubItems" ItemsSource="{Binding Path=SubItems, Mode=OneWay}" Margin="10,0,0,0" ItemTemplateSelector="{StaticResource ItemTemplateSelector}">
            </ListView>
        </Expander.Content>
    </Expander>

</UserControl>

<UserControl x:Class="PlanningProgramV3.Views.PlanControls.TextUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanningProgramV3.Views.PlanControls"
             xmlns:data="clr-namespace:PlanningProgramV3.ViewModels.ItemViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox Width="Auto" Height="Auto" MinLines="1" AcceptsReturn="True" MaxWidth="300" MinWidth="50" Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
</UserControl>

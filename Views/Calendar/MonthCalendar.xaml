<UserControl x:Class="PlanningProgramV3.Views.Calendar.MonthCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanningProgramV3.Views.Calendar"
             xmlns:Converters="clr-namespace:PlanningProgramV3.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <!-- Much of the code for the calendar has come from this file: https://github.com/Martin-Pucalka/WPF.EventCalendar/tree/master/WPF.EventCalendar -->
    <UserControl.Resources>
        <Converters:MonthToName x:Key="MonthNumberToNameConverter"/>
    </UserControl.Resources>
    <DockPanel>
        <Grid Height="30" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Width="Auto" Click="PreviousMonthButtonClicked" Content="&lt;-"/>
            <StackPanel Orientation="Horizontal" Width="Auto" Height="Auto" Grid.Column="1" Margin="50,0,50,0">
                <ComboBox x:Name="MonthsComboBox" Width="Auto" BorderThickness="0" FontSize="16" FontWeight="DemiBold" SelectionChanged="MonthsComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource MonthNumberToNameConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:Name="YearsComboBox" Width="Auto" BorderThickness="0" FontSize="16" FontWeight="DemiBold" SelectionChanged="YearsComboBox_SelectionChanged" />
            </StackPanel>

            <Button Grid.Column="2" Width="Auto" Click="NextMonthButton_OnClick" Content="-&gt;" />
        </Grid>

        <Grid x:Name="DayLabelsGrid" Margin="0,20,0,0" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Name="DaysGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        </Grid>
    </DockPanel>
</UserControl>
